// General
//
article
  section
    p, ol, li
      text-align: justify
      margin: 0.7em
    h1
      color: #39b8bb
      font-family: "Calibri", sans
      text-transform: uppercase
      margin-bottom: 0.8em

    h2
      color: #f38800
      font-family: "Calibri", sans
      margin: 0.5em 0
    p.blue
      color: #39b8bb
      font-size: 0.9em
    .text-small, .small-text
      font-size: 0.7em
      border-top: 2px solid #39b8bb
    table
      padding: 0.5em
      font-size: 0.8em
      text-align: center
      th
        background-color: #39b8bb
        color: black
        font-size: 0.8em
        text-align: center
      tr:nth-child(even)
        background-color: white
        color: black
      tr:nth-child(odd)
        background-color: #a9dddf
        color: black
      td:first-child
        text-align: left
        padding-left: 0.5em
        color: black