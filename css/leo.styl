// General
//
article
  section
    h1
      color: #39b8bb
      font-family: "Calibri", sans
      margin-bottom: 0.8em
    h2
      color: #39b8bb
      font-family: "Calibri", sans
      margin: 0.5em 0
    p.blue
      color: #39b8bb
      font-size: 0.9em
    .text-small, .small-text
      font-size: 0.7em
    table
      padding: 0.5em
      font-size: 0.8em
      text-align: center
      border-bottom: 4px solid #39b8bb;
      th
        background-color: #39b8bb
        color: white
        font-family: "Calibri", sans
        font-size: 0.8em
        text-align: center
      tr:nth-child(even)
        background-color: white
        color: black
      tr:nth-child(odd)
        background-color: #a9dddf
        color: black
      td:first-child
        text-align: left
        padding-left: 0.5em
        color: black