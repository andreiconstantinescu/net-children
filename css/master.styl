lfa-framework()

@import _avatar

// General
//
article
  section
    p, ol, li
      text-align: justify
      margin: 0.7em
    ul
      li
        list-style: none
      li:before
        content: '\2022'
        color: orange
        margin-left: 0.2em
        margin-right: 0.2em
    h1
      color: #39b8bb
      font-family: "Calibri", sans
      text-transform: uppercase
      margin-bottom: 0.8em

    h2
      color: #f38800
      font-family: "Calibri", sans
      margin: 0.5em 0
    p.blue
      color: #39b8bb
      font-size: 0.9em
    p.table
      color: #39b8bb
      font-size: 0.9em
    .text-small, .small-text
      font-size: 0.7em
      // border-top: 2px solid #39b8bb
    table
      padding: 0.5em
      font-size: 0.8em
      text-align: center
      th
        background-color: #39b8bb
        color: white
        font-size: 0.8em
        text-align: center
      tr:nth-child(even)
        background-color: white
        color: black
      tr:nth-child(odd)
        background-color: #a9dddf
        color: black
      td:first-child
        text-align: left
        padding-left: 0.5em
        color: #39b8bb
    table.table-responsive
      text-align: center
      border-style: solid
      border-color: white
      border-bottom: 4px solid #39b8bb
      font-size: 0.8em
      thead
        td, th
          color: white
          background-color: #39b8bb
          padding .2em
          border: 1px solid white
          border-collapse: collapse
      tbody
        tr:nth-child(odd)
          background-color: white
        tr:nth-child(even)
          background-color: rgb(178,225,227)
        td, th
          color: black
          padding .2em
          border: 1px solid white
          border-collapse: collapse
.hchart
  .hchart-row
    margin-bottom: 1em
  @media (max-width: 750px)
    .small
      font-size: 15px
