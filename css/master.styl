lfa-framework()

@import _avatar
@import leo

// General
//
article
  section
    p, ol, li
      text-align: justify
      margin: 0.7em
    ul
      li
        list-style: none
      li:before
        content: '\2022'
        color: #ee7401
        margin-left: 0.2em
        margin-right: 0.2em
    table.table-responsive
      text-align: center
      font-size: 0.8em
      color: white
      border: 1px solid white
      border-collapse: collapse
      td, th
        padding .2em 
        border: 1px solid white
        border-collapse: collapse
      thead
        background-color: #39b8bb
      tbody
        color: black
        tr:nth-child(odd)
          background-color: white
        tr:nth-child(even)
          background-color: rgb(178,225,227)
