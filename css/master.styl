article
  section
    background-color: #fff
    margin-top: 0
    padding: 1.3em
    h1
      margin-top: .3em
      @media(max-width: 768px)
        font-size: 1.7em
    ul, li
      text-align: justify
      line-height: 1.3 em
      margin-top: .4em
      margin-bottom: .4em
    p
      text-align: justify
      line-height: 1.3 em
      margin-top: .7em
      margin-bottom: .7em
    em
      p
        margin: 0.5em
        font-size: 0.7em
    ul
      li
        text-indent: -.5em
        list-style: none
      li:before
        content: '\2022'
        color: #ee7401
        margin-right: 0.2em
        font-size: 1.5em
    table.table-responsive
      text-align: center
      font-size: 0.8em
      line-height: 1.2em
      thead
        td, th
          color: white
          background-color: #39b8bb
          padding .5em
          font-weight: 300
          border: 1px solid white
          border-collapse: collapse
          text-align: center
      tbody
        tr:nth-child(odd)
          background-color: white
        tr:nth-child(even)
          background-color: rgb(178,225,227)
        tr td:not(:first-child)
          width: 5em
        td, th
          color: black
          padding .5em
          border: 1px solid white
          border-collapse: collapse
.panel
  border: 1px solid #f0f0f0
  border-radius: 5px
  p.table, p.blue
    font-family: "Exo 2", "Calibri", sans-serif
  .panel-body
    padding 0
  .panel-footer
    border-top: 4px solid #39b8bb
  .panel-heading
    border-bottom: 1px solid #f0f0f0
    p
      margin: 0
      font-size: .8em
.hchart
  margin 1em
  margin-bottom 0
  font-family: "Source Sans Pro", sans-serif
  @media (max-width: 750px)
    .small
      font-size: 15px
  .hchart-row
    margin-bottom: 1em
  .hchart-legend
    margin-bottom: 1em
  .progress-bar
    font-size: 15px
    color: #000
.vchart
  margin: .5em
  font-family: "Source Sans Pro", sans-serif
  .progress-bar
    font-size: 15px
    color: black
.center
  text-align: center

a.textTooltip
  cursor: pointer
  text-decoration: none;
  border-bottom: 1px dashed black;
  color: inherit
  &:hover
    color: inherit
    text-decoration: none;
    border-bottom: 1px solid;
    border-bottom-color: inherit;

.gallery
  width: 50%
  margin: 0 auto

.footnote
  a
    color: #EE7401
    font-size: 1.5em
    cursor: pointer
.footnote-content
  font-size: 0.7em
