@import '../addons/lfa-exercises/css/main'
@import '../addons/lfa-backstage/css/main'

lfa-framework()

@import _avatar

//
// Text flow
//

.no-strech
  width: auto

.percent-50
  max-width: 50%

.center
  margin: 0 auto

.margin-for-right
  margin: 0 0 1em 1em

.bordered
  img
    border-radius: 0.4em


//
// General
//
article
  section
    p
      text-align: justify

    h1
      color: #32abaf
      font-family: "Futura", "Calibri", sans
      text-transform: uppercase
      border-bottom: 5px solid
      margin-bottom: 0.8em

    h2
      color: #68A700
      font-family: "Futura", "Calibri", sans
      margin: 0.5em 0

    .aside-box
      background-color: #F8DDB3
      border-radius: 0.5em
      padding: 1.1em
      margin: 0 1em

      quote
        font-style: oblique
        font-size: 130%

