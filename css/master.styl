lfa-framework()

//
// Text flow
//

.no-strech
  width: auto

.percent-50
  max-width: 50%

.center
  margin: 0 auto

.margin-for-right
  margin: 0 0 1em 1em

.bordered
  img
    border-radius: 0.4em


//
// General
//
article
  section
    p, ol, li 
      text-align: justify
    ul
      li
        list-style: none
      li:before
        content: '\2022'
        color: orange
        margin-left: 0.2em
        margin-right: 0.2em
    h1
      color: #39b8bb
      font-family: "Calibri", sans
      text-transform: uppercase
      margin-bottom: 0.8em

    h2
      color: #f38800
      font-family: "Calibri", sans
      margin: 0.5em 0
    .left
      text-align: left
      padding: 0.2em
    p.table
      color: #39b8bb
    .text-small, .small-text
      font-size: 0.7em
      // margin: 0
    table
      text-align: center
      tr.blue 
        padding: 0.2em
        font-size: 0.8em
        background-color: #39b8bb
        color: white
      tr.white 
        padding: 0.2em
        font-size: 0.8em
        background-color: white
        color: #39b8bb
    table.table-responsive
      text-align: center
      font-size: 0.8em
      color: white
      border: 1px solid white
      border-collapse: collapse
      td, th
        padding .2em 
        border: 1px solid white
        border-collapse: collapse
      thead
        background-color: #39b8bb
      tbody
        color: black
        tr:nth-child(even)
          background-color: white
        tr:nth-child(odd)
          background-color: rgb(178,225,227)