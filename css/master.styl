@import '../addons/lfa-content-widgets/css/master'

// Respect Horodnic!!
#rightbar-toggle
  display: none !important

lfa-framework()

@import leo
@import chart
@import _cover
@import _fonts

// General
//
body
  background-color: #f0f0f0
  padding: 0
  font-family: "Source Sans Pro", sans-serif
  font-weight: 400
  .menu, .navigation-menu
    @media (max-width: 767px)
      background: #00ada3 !important 
  nav#leftbar
    font-family: "Source Sans Pro", "sans-serif"
    font-weight: 300
    font-size: .9em
    background-color: #333
